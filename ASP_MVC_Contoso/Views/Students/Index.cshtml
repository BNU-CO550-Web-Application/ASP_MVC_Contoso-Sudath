@model IEnumerable<ASP_MVC_Contoso.Models.Student>

@{
    ViewData["Title"] = "Student Information";
}
<div class="text-center">
    <h1 class="display-4">MVC Contoso</h1>
    <h2>By sudath Nawagamuwage</h2>
</div>

<h2>Student Lists</h2>

<div class ="btn btn-group-sm">
    <a class="btn btn-primary m-md-1" asp-action="Create">Add Student</a>
</div>
<table class="table table-responsive table-hover table-bordered">
    <thead>
        <tr class="table-active">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td class="btn btn-group-sm">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ID">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
